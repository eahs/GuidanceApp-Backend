@model IEnumerable<ADSBackend.Models.StaffViewModel.Staff>

@{
    ViewData["Title"] = "Index";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-8">
        <h2>EAHS Guidance Counselors</h2>
        <h4>Edit the official list of EAHS Counselors</h4>
        </ol>
    </div>
</div>
<div class="col-lg-3">
    <div class="ibox">
        <div class="ibox-title">
            <h5>Add a new counselor</h5>
        </div>
        <div class="ibox-content">
            <p>
                <a asp-action="Create" class="btn btn-info">Add a Counselor</a>
            </p>
        </div>
    </div>
</div>
<div class="col-lg-9">
    <div class="ibox-content">
    <div class="table-responsive">
       <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CGrade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CGrade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CEmail)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
<div class="col-lg-5">
<div class="ibox-footer">
    <h4>NOTE: Please remove counselors that are no longer working.</h4>
</div>
    </div>
