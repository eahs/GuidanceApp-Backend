@model IEnumerable<ADSBackend.Models.AppointmentModel.Appointment>

@{
    ViewData["Title"] = "Make an Apppointment";
}

<div class="ibox">
    <div class="ibox-title">
        <h2>Make an Appointment</h2>
        <p>
            <a asp-action="Create" class="btn btn-info">Schedule Appointment</a>
        </p>
    </div>
    <div class="ibox-content">
        <div class="table-responsive">
            <table class="table table- table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Grade)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Counselor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>

                        <th>
                            <p>Configure Details</p>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Grade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Counselor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Appoint" class=" btn fa fa-wrench btn-outline btn-rounded btn-success"> Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Appoint" class=" btn fa btn-outline btn-rounded btn-info"> Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Appoint" class=" btn fa fa-trash btn-outline btn-rounded btn-danger"> Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>